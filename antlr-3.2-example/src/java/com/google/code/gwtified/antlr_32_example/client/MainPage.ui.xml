<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.button {
			font-weight: bold;
			margin-top: 20px;
			width: 7em;
			height: 2.1em;
			margin-left: 325px;
		}
		
		.textarea {
			height: 75px;
			width: 750px;
		}
		
		.content {
			width: 800px;
			margin-left: auto;
			margin-right: auto;
		}
	</ui:style>
	<g:HTMLPanel>
		<div class="{style.content}">
			<h2>Input</h2>
			<a target="#" href="http://code.google.com/p/gwtified/source/browse/antlr-3.2-example/src/antlr/com/google/code/gwtified/antlr_32_example/client/">Source VecMath.g, Simplify.g, Reduce.g</a>
			<g:TextArea styleName="{style.textarea}" ui:field="inputTA" />
			<h2>
				Simplified
				<g:Button styleName="{style.button}" ui:field="simplifyBT" text="Simplify" />
			</h2>
			<g:TextArea styleName="{style.textarea}" ui:field="simplifyTA" enabled="false" />
			<h2>
				Reduced
				<g:Button styleName="{style.button}" ui:field="reduceBT" text="Reduce" />
			</h2>
			<g:TextArea styleName="{style.textarea}" ui:field="reduceTA" enabled="false" />
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 